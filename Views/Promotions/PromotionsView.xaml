<UserControl
    x:Class="MVVMGym.Views.PromotionsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MVVMGym.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding PromotionsList}">
            <DataGrid.Columns>
                <DataGridTextColumn
                    x:Name="promo_id"
                    Binding="{Binding Path=promotion_id}"
                    Header="id" />
                <DataGridTextColumn
                    x:Name="code"
                    Binding="{Binding Path=code}"
                    Header="Kod" />
                <DataGridTextColumn
                    x:Name="description"
                    Binding="{Binding Path=description}"
                    Header="opis" />
                <DataGridTextColumn
                    x:Name="discountPercentage"
                    Binding="{Binding Path=discount_percentage}"
                    Header="procent znizki" />
                <DataGridTextColumn
                    x:Name="created"
                    Binding="{Binding Path=created_at}"
                    Header="dodano" />
                <DataGridTextColumn
                    x:Name="zaktualizowano"
                    Binding="{Binding Path=updated_at}"
                    Header="zaktualizowano" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
