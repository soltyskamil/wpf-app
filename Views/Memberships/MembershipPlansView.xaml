<UserControl
    x:Class="MVVMGym.Views.MembershipPlansView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MVVMGym.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding MembershipList}">
            <DataGrid.Columns>
                <DataGridTextColumn
                    x:Name="plan_id"
                    Binding="{Binding Path=membership_plan_id}"
                    Header="id" />
                <DataGridTextColumn
                    x:Name="name"
                    Binding="{Binding Path=code}"
                    Header="Nazwa" />
                <DataGridTextColumn
                    x:Name="durationMonths"
                    Binding="{Binding Path=duration_months}"
                    Header="Czas trwania" />
                <DataGridTextColumn
                    x:Name="cena"
                    Binding="{Binding Path=total_price}"
                    Header="cena" />
                <DataGridTextColumn
                    x:Name="opis"
                    Binding="{Binding Path=description}"
                    Header="Opis" />
                <DataGridTextColumn
                    x:Name="updated"
                    Binding="{Binding Path=created_at}"
                    Header="zaktualizowano" />
                <DataGridTextColumn
                    x:Name="created"
                    Binding="{Binding Path=updated_at}"
                    Header="dodano" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
