<Window
    x:Class="MVVMGym.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
    xmlns:vm="clr-namespace:MVVMGym.Views"
    Title="MVVMGym"
    Width="800"
    Height="800"
    WindowState="Maximized">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="MainWindowResources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="75" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border
            Grid.Row="0"
            Grid.Column="0"
            BorderThickness="0,0,0,2"
            Style="{DynamicResource DashboardBorderStyle}">
            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">


                <materialIcons:MaterialIcon
                    Width="32"
                    Height="32"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Kind="ViewDashboard" />
                <TextBlock
                    Margin="10,0,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="32">
                    Projekt
                </TextBlock>
            </StackPanel>

        </Border>

        <Border
            Grid.Row="0"
            Grid.Column="1"
            Padding="50,0,0,0"
            BorderThickness="2,0,0,2"
            Style="{DynamicResource DashboardBorderStyle}">


            <Border
                Width="350"
                Height="35"
                Padding="4"
                HorizontalAlignment="Left"
                BorderBrush="Black"
                BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>


                    <TextBlock
                        Grid.Column="0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Text="Szukaj.." />
                    <TextBox
                        Grid.Column="1"
                        Padding="4"
                        VerticalAlignment="Center"
                        BorderThickness="0" />
                </Grid>


            </Border>
        </Border>


        <ScrollViewer
            Grid.Row="1"
            Grid.Column="0"
            Padding="16"
            VerticalScrollBarVisibility="Hidden">
            <ItemsControl ItemsSource="{Binding Path=Commands}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button
                            Name="Button"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Stretch"
                            Command="{Binding Path=Command}"
                            Style="{DynamicResource NavButtonStyle}">


                            <StackPanel Orientation="Horizontal">

                                <materialIcons:MaterialIcon
                                    Grid.Column="0"
                                    Width="24"
                                    Height="24"
                                    Margin="0,0,10,0"
                                    HorizontalContentAlignment="Stretch"
                                    Foreground="White"
                                    Kind="{Binding Path=Icon}" />

                                <TextBlock
                                    Grid.Column="1"
                                    Style="{StaticResource NavTextStyle}"
                                    Text="{Binding Path=DisplayName}" />
                            </StackPanel>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

        </ScrollViewer>

        <Border
            Grid.Row="1"
            Grid.Column="1"
            Margin="0"
            Padding="24"
            BorderThickness="2,0,0,0"
            Style="{DynamicResource DashboardBorderStyle}">

            <ContentPresenter Content="{Binding Path=Workspaces}" ContentTemplate="{StaticResource WorkspacesTemplate}" />


        </Border>

    </Grid>
</Window>
