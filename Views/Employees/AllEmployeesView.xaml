<local:AllViewBase
    x:Class="MVVMGym.Views.AllEmployeesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MVVMGym.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Background="White">
        <DataGrid AutoGenerateColumns="false" ItemsSource="{Binding EmployeesList}">
            <DataGrid.Columns>
                <DataGridTextColumn
                    x:Name="id"
                    Binding="{Binding Path=ID}"
                    Header="ID" />
                <DataGridTextColumn
                    x:Name="firstName"
                    Binding="{Binding Path=firstName}"
                    Header="Name" />
                <DataGridTextColumn
                    x:Name="lastName"
                    Binding="{Binding Path=lastName}"
                    Header="Last name" />

                <DataGridTextColumn
                    x:Name="sex"
                    Binding="{Binding Path=sex}"
                    Header="Sex" />

                <DataGridTextColumn
                    x:Name="dob"
                    Binding="{Binding Path=dob}"
                    Header="Date of birth" />


                <DataGridTextColumn
                    x:Name="Role"
                    Binding="{Binding Path=Role}"
                    Header="Role" />

                <DataGridTextColumn
                    x:Name="Branch"
                    Binding="{Binding Path=Branch}"
                    Header="Branch" />

                <DataGridTextColumn
                    x:Name="createdAt"
                    Binding="{Binding Path=createdAt}"
                    Header="Dodano" />

                <DataGridTextColumn
                    x:Name="updatedAt"
                    Binding="{Binding Path=updatedAt}"
                    Header="Zmodyfikowano" />


            </DataGrid.Columns>
        </DataGrid>


    </Grid>
</local:AllViewBase>
