<UserControl
    x:Class="MVVMGym.Views.EmployeeSummaryView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MVVMGym.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <DataGrid
            AutoGenerateColumns="False"
            IsReadOnly="True"
            ItemsSource="{Binding EmployeesOverview}"
            RowDetailsVisibilityMode="VisibleWhenSelected">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding ID}" Header="ID" />
                <DataGridTextColumn Binding="{Binding name}" Header="Name" />
                <DataGridTextColumn Binding="{Binding lastName}" Header="Last Name" />

            </DataGrid.Columns>


            <DataGrid.RowDetailsTemplate>
                <DataTemplate>
                    <DataGrid
                        Padding="20"
                        AutoGenerateColumns="False"
                        ColumnWidth="150"
                        IsReadOnly="True"
                        ItemsSource="{Binding overviews}">

                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding maxPayGross}" Header="Max Pay Gross" />
                            <DataGridTextColumn Binding="{Binding minPayGross}" Header="Min Pay Gross" />
                            <DataGridTextColumn Binding="{Binding maxPayNet}" Header="Max Pay Net" />
                            <DataGridTextColumn Binding="{Binding minPayNet}" Header="Min Pay Net" />
                            <DataGridTextColumn Binding="{Binding averagePayGross}" Header="Average Pay Gross" />
                            <DataGridTextColumn Binding="{Binding averagePayNet}" Header="Average Pay Net" />
                            <DataGridTextColumn Binding="{Binding totalValuePayGross}" Header="Total Pay Gross" />
                            <DataGridTextColumn Binding="{Binding totalValuePayNet}" Header="Total Pay Net" />
                        </DataGrid.Columns>
                    </DataGrid>

                </DataTemplate>

            </DataGrid.RowDetailsTemplate>
        </DataGrid>

    </Grid>
</UserControl>
