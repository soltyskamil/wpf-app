<local:FormViewBase
    x:Class="MVVMGym.Views.NewEmployeeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MVVMGym.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Margin="-4" Background="{DynamicResource TextPrimaryBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="200" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>


        <Label
            Grid.Row="0"
            Grid.Column="0"
            Content="First name"
            Style="{DynamicResource FormLabelStyle}" />
        <TextBox
            Grid.Row="0"
            Grid.Column="1"
            Text="{Binding Path=FirstName, UpdateSourceTrigger=PropertyChanged}" />

        <Label
            Grid.Row="1"
            Grid.Column="0"
            Content="Last Name"
            Style="{DynamicResource FormLabelStyle}" />

        <TextBox
            Grid.Row="1"
            Grid.Column="1"
            Text="{Binding Path=LastName, UpdateSourceTrigger=PropertyChanged}" />

        <Label
            Grid.Row="2"
            Grid.Column="0"
            Content="Dob"
            Style="{DynamicResource FormLabelStyle}" />
        <DatePicker
            Grid.Row="2"
            Grid.Column="1"
            SelectedDate="{Binding Dob, Mode=TwoWay}" />

        <Label
            Grid.Row="3"
            Grid.Column="0"
            Content="Rola"
            Style="{DynamicResource FormLabelStyle}" />

        <ComboBox
            Grid.Row="3"
            Grid.Column="1"
            DisplayMemberPath="code"
            ItemsSource="{Binding Roles}"
            SelectedValue="{Binding SelectedRoleId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            SelectedValuePath="role_id" />

        <Label
            Grid.Row="4"
            Grid.Column="0"
            Content="Siłownia"
            Style="{DynamicResource FormLabelStyle}" />
        <ComboBox
            Grid.Row="4"
            Grid.Column="1"
            DisplayMemberPath="name"
            ItemsSource="{Binding Branches}"
            SelectedValue="{Binding SelectedBranchId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            SelectedValuePath="branch_id" />

        <Label
            Grid.Row="5"
            Grid.Column="0"
            Content="Płeć"
            Style="{DynamicResource FormLabelStyle}" />
        <ComboBox
            Grid.Row="5"
            Grid.Column="1"
            ItemsSource="{Binding Sexes}"
            SelectedItem="{Binding Sex, Mode=TwoWay}" />

    </Grid>
</local:FormViewBase>
