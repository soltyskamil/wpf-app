<UserControl
    x:Class="MVVMGym.Views.EmployeesDashboardView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MVVMGym.Views"
    xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Background="{DynamicResource BgBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ItemsControl Grid.Row="0" ItemsSource="{Binding Path=Commands}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button
                        Name="Button"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Stretch"
                        Command="{Binding Path=Command}"
                        Style="{DynamicResource NavButtonStyle}">


                        <StackPanel Orientation="Horizontal">

                            <materialIcons:MaterialIcon
                                Grid.Column="0"
                                Width="24"
                                Height="24"
                                Margin="0,0,10,0"
                                HorizontalContentAlignment="Stretch"
                                Foreground="White"
                                Kind="{Binding Path=Icon}" />

                            <TextBlock
                                Grid.Column="1"
                                Style="{StaticResource NavTextStyle}"
                                Text="{Binding Path=DisplayName}" />
                        </StackPanel>
                    </Button>
                </DataTemplate>
            </ItemsControl.ItemTemplate>

        </ItemsControl>
        <ContentControl
            Grid.Row="1"
            Background="Red"
            Content="{Binding CurrentPage}" />

    </Grid>
</UserControl>
