<UserControl
    x:Class="MVVMGym.Views.AllVendorsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MVVMGym.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Background="White">
        <DataGrid AutoGenerateColumns="false" ItemsSource="{Binding VendorsList}">
            <DataGrid.Columns>
                <DataGridTextColumn
                    x:Name="ID"
                    Binding="{Binding Path=vendor_id}"
                    Header="ID" />
                <DataGridTextColumn
                    x:Name="firstName"
                    Binding="{Binding Path=firstName}"
                    Header="Name" />
                <DataGridTextColumn
                    x:Name="lastName"
                    Binding="{Binding Path=lastName}"
                    Header="Last name" />



            </DataGrid.Columns>
        </DataGrid>


    </Grid>
</UserControl>
