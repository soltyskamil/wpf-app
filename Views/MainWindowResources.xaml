<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
    xmlns:vm="clr-namespace:MVVMGym.ViewModels"
    xmlns:vw="clr-namespace:MVVMGym.Views">

    <!--  //Employees  -->
    <DataTemplate DataType="{x:Type vm:AllEmployeesViewModel}">
        <vw:AllEmployeesView />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:AddEmployeeViewModel}">
        <vw:NewEmployeeView />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:EmployeesSummaryViewModel}">
        <vw:EmployeeSummaryView />
    </DataTemplate>
    <!--<DataTemplate DataType="{x:Type vm:EquipmentDashboardViewModel}">
        <vw:EmployeesDashboardView />
    </DataTemplate>-->

    <!--  //Employees  -->

    <!--  Equipment  -->
    <DataTemplate DataType="{x:Type vm:EquipmentViewModel}">
        <vw:AllEquipmentView />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:AddEquipmentViewModel}">
        <vw:NewEquipmentView />
    </DataTemplate>
    <!--  Equipment  -->

    <!--  Promotions  -->
    <DataTemplate DataType="{x:Type vm:PromotionsViewModel}">
        <vw:PromotionsView />
    </DataTemplate>
    <!--  Promotions  -->

    <!--  Memberships  -->
    <DataTemplate DataType="{x:Type vm:MembershipPlansViewModel}">
        <vw:MembershipPlansView />
    </DataTemplate>
    <!--  Memberships  -->

    <!--  //Branches  -->
    <DataTemplate DataType="{x:Type vm:BranchesViewModel}">
        <vw:BranchesView />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:NewBranchViewModel}">
        <vw:NewBranchView />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:BranchSummaryViewModel}">
        <vw:BranchSummaryView />
    </DataTemplate>
    <!--  //Branches  -->

    <!--  //Vendors  -->
    <DataTemplate DataType="{x:Type vm:AddVendorViewModel}">
        <vw:NewVendorView />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:AllVendorsViewModel}">
        <vw:AllVendorsView />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:VendorsSummaryViewModel}">
        <vw:VendorSummaryView />
    </DataTemplate>
    <!--  //Vendors  -->

    <!--  Classes  -->
    <DataTemplate DataType="{x:Type vm:AllClassesViewModel}">
        <vw:AllClassesView />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:AddNewClassViewModel}">
        <vw:NewClassView />
    </DataTemplate>

    <DataTemplate x:Key="ClosableTabItemTemplate">
        <DockPanel>
            <ContentPresenter VerticalAlignment="Center" Content="{Binding Path=DisplayName}" />
            <Button
                Margin="10,0,0,0"
                Command="{Binding Path=CloseCommand}"
                Style="{DynamicResource TabButton}">

                <materialIcons:MaterialIcon Kind="CloseBold" />


            </Button>
        </DockPanel>
    </DataTemplate>

    <!--
        This template explains how to render the 'Workspace' content area in the main window.
    -->
    <DataTemplate x:Key="WorkspacesTemplate">
        <TabControl
            BorderBrush="Transparent"
            IsSynchronizedWithCurrentItem="True"
            ItemTemplate="{StaticResource ClosableTabItemTemplate}"
            ItemsSource="{Binding}">

            <TabControl.ItemContainerStyle>
                <Style BasedOn="{StaticResource TabItemStyle}" TargetType="TabItem">
                    <Setter Property="Content" Value="{Binding}" />

                </Style>

            </TabControl.ItemContainerStyle>


        </TabControl>
    </DataTemplate>
</ResourceDictionary>