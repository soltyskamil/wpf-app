<local:FormViewBase
    x:Class="MVVMGym.Views.NewBranchView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:MVVMGym.helpers"
    xmlns:local="clr-namespace:MVVMGym.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <local:FormViewBase.Resources>
        <helpers:TimeSpanConverter x:Key="TimeSpanConverter" />
    </local:FormViewBase.Resources>

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="200" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>

        <Label
            Grid.Row="0"
            Grid.Column="0"
            Margin="0,8,0,8"
            Content="Name" />
        <TextBox
            Grid.Row="0"
            Grid.Column="1"
            Margin="0,8,0,8"
            Text="{Binding Path=Name, UpdateSourceTrigger=PropertyChanged}" />

        <Label
            Grid.Row="1"
            Grid.Column="0"
            Margin="0,8,0,8"
            Content="Address" />

        <TextBox
            Grid.Row="1"
            Grid.Column="1"
            Margin="0,8,0,8"
            Text="{Binding Path=Address, UpdateSourceTrigger=PropertyChanged}" />

        <Label
            Grid.Row="2"
            Grid.Column="0"
            Margin="0,8,0,8"
            Content="Czas otwarcia" />

        <ComboBox
            Grid.Row="2"
            Grid.Column="1"
            FontSize="24"
            ItemsSource="{Binding AvaiableHours}"
            SelectedItem="{Binding OpenTime, Mode=TwoWay}">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding ., StringFormat={}{0:hh\\:mm}}" />
                </DataTemplate>

            </ComboBox.ItemTemplate>
        </ComboBox>



        <Label
            Grid.Row="3"
            Grid.Column="0"
            Margin="0,8,0,8"
            Content="Czas zamknięcia" />
        <ComboBox
            Grid.Row="3"
            Grid.Column="1"
            FontSize="24"
            ItemsSource="{Binding AvaiableHours}"
            SelectedItem="{Binding CloseTime, Mode=TwoWay}">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding ., StringFormat={}{0:hh\\:mm}}" />
                </DataTemplate>

            </ComboBox.ItemTemplate>
        </ComboBox>

        <Label
            Grid.Row="4"
            Grid.Column="0"
            Margin="0,8,0,8"
            Content="Phone" />
        <TextBox
            Grid.Row="4"
            Grid.Column="1"
            Margin="0,8,0,8"
            Text="{Binding Path=Phone, UpdateSourceTrigger=PropertyChanged}" />




    </Grid>
</local:FormViewBase>
