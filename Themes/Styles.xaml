<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <Style x:Key="NavButtonStyle" TargetType="Button">



        <!--  //Nav  -->
        <Setter Property="Margin" Value="2,6" />
        <Setter Property="Padding" Value="10,6" />
        <Setter Property="Background" Value="{DynamicResource Accent2Brush}" />
        <Setter Property="Foreground" Value="{DynamicResource BgBrush}" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Height" Value="50" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border
                        x:Name="Bd"
                        Background="{TemplateBinding Background}"
                        BorderBrush="Transparent"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="4"
                        SnapsToDevicePixels="True">

                        <ContentPresenter
                            Margin="{TemplateBinding Padding}"
                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                            RecognizesAccessKey="True"
                            SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="Toolbar" TargetType="ToolBar">
        <!--<Setter Property="Background" Value="red" />-->
    </Style>

    <Style x:Key="ContentPresenterStyle" TargetType="ContentPresenter">
        <!--<Setter Property="ToolBar.Background" Value="red" />

        <Setter Property="ToolBarTray.Background" Value="red" />
        <Setter Property="ToolBarTray.Background" Value="red" />-->

    </Style>

    <Style x:Key="ContentPresenterBorderStyle" TargetType="Border">
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <!--<Setter Property="ToolBar.Background" Value="red" />-->
        <Setter Property="Background" Value="red" />
        <Setter Property="ToolBarTray.Background" Value="red" />
        <!--<Setter Property="ToolBarTray.Background" Value="red" />-->

    </Style>

    <Style x:Key="NavTextStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{DynamicResource BgBrush}" />
        <Setter Property="HorizontalAlignment" Value="Right" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>
    <!--  //Nav  -->

</ResourceDictionary>