<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:MVVMGym.Views">

    <Style TargetType="{x:Type local:FormViewBase}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:FormViewBase}">
                    <Grid>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="34" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <ToolBar
                            Grid.Row="0"
                            Height="30"
                            Margin="0,2,0,2">
                            <ToggleButton Command="{Binding SaveAndCloseCommand}" Content="Zapisz i zamknij" />
                            <ToggleButton Content="Anuluj" />
                        </ToolBar>
                        <ContentPresenter Grid.Row="1" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
